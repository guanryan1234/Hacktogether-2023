@page "/fetchdata"

<PageTitle>Personal Data</PageTitle>

@using GraphPOCBlazor.Data
@inject GraphService GraphService

<h1>Personal Data</h1>

<p>This component demonstrates fetching data from a service.</p>
<table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>user.DisplayName</th>
            </tr>
        </tbody>
    </table>

    


@code {
    private Microsoft.Graph.Models.User user = new Microsoft.Graph.Models.User();

    protected override async Task OnInitializedAsync()
    {
        user = await GraphService.GetUserData();
    }
}
